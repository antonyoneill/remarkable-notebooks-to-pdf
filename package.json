{
  "name": "remarkable-notepads-to-pdf",
  "version": "0.0.1",
  "description": "Simple utility to export notepads as PDFs and organise them",
  "main": "src/index.ts",
  "scripts": {
    "convert": "ts-node src/index.ts",
    "style:check": "prettier --check .",
    "style:fix": "prettier --write .",
    "lint:check": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts --fix .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Antony O'Neill",
  "license": "MIT",
  "dependencies": {
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix --ext .ts"
    ]
  }
}
